<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
  <modelVersion>4.0.0</modelVersion>
  <groupId>pranav.kapoor</groupId>
  <artifactId>ips</artifactId>
  <name>IPS-LINK_v2</name>
  <version>0.0.1-SNAPSHOT</version>
  <developers>
    <developer>
      <name>Pranav Kapoor</name>
      <email>pranavk@valitor.com</email>
      <url>https://github.com/pranavkapoorr</url>
      <organization>IPS- International Payment Services</organization>
      <organizationUrl>http://www.ips-inter.com</organizationUrl>
      <roles>
        <role>Developer</role>
      </roles>
    </developer>
  </developers>
  <organization>
    <name>IPS- INTERNATIONAL PAYMENT SERVICES</name>
    <url>http://ips-inter.com</url>
  </organization>
  <build>
    <plugins>
      <plugin>
        <artifactId>maven-compiler-plugin</artifactId>
        <version>3.5.1</version>
        <configuration>
          <source>1.8</source>
          <target>1.8</target>
        </configuration>
      </plugin>
      <plugin>
        <artifactId>maven-shade-plugin</artifactId>
        <version>3.1.0</version>
        <executions>
          <execution>
            <phase>package</phase>
            <goals>
              <goal>shade</goal>
            </goals>
            <configuration>
              <transformers>
                <transformer>
                  <mainClass>app_main.IPS_Launcher</mainClass>
                </transformer>
              </transformers>
            </configuration>
          </execution>
        </executions>
      </plugin>
    </plugins>
  </build>
</project>

